{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "HealthCheck": {
    "HeaderText": "HealthCheck Aggregator UI",
    "PollingInterval": 5,
    "UIPath": "/health-ui",
    "ApiPath": "/health-api"
  },
  "Services": [
    {
      "Name": "WatchDog",
      "Url": "http://localhost:5000/health"
    },
    {
      "Name": "Service1",
      "Url": "http://localhost:5001/health"
    },
    {
      "Name": "Service2",
      "Url": "http://localhost:5002/health"
    }
  ]
}